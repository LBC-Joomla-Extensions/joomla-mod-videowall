<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0" client="site" method="upgrade">
    <name>Video con título</name>
    <author>Luis BC</author>
    <version>1.0.0</version>
    <description>Un módulo para mostrar un video con un titulo y botón de mute</description>
    <files>
        <filename>mod_videotitulo.xml</filename>
        <filename module="mod_videotitulo">mod_videotitulo.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>css</folder>
        <folder>js</folder>
        <folder>vendor</folder>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="es-url"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    default="0"
                    label="URL"
                    description="Si para url externa (youtube, etc...) y no para archivo local"
                >
                    <option value="0">JNO</option>
					<option value="1">JYES</option>
                </field>
                <field 
                    name="url-video" 
                    type="URL" 
                    directory="images" 
                    label="URL" 
                    description="URL al video para mostrar embed"
                    showon="es-url:1"
                ></field>        
                <field
                    name="url-video-autoplay"
                    type="radio"
                    default="1"
                    label="Autoplay"
                    showon="es-url:1"
                >
                    <option value="0">JNO</option>
					<option value="1">JYES</option>
                </field>        
                <field
                    name="url-video-loop"
                    type="radio"
                    default="1"
                    label="Loop"
                    showon="es-url:1"
                >
                    <option value="0">JNO</option>
					<option value="1">JYES</option>
                </field>      
                <field
                    name="url-video-id"
                    type="text"
                    label="Video ID"
                    showon="es-url:1"
                >
                </field>  
                
                <!-- 
                Estos campos media son incompatibles con el File Browser de JCE. 
                Si JCE está instalado ir al componente JCE -> Perfil Usuario -> Features & Layout -> Additional Features -> Uncheck File Browser 
                -->
                <field 
                    name="ruta-video" 
                    type="media"                     
                    label="Video" 
                    types="videos"
                    description="Ruta al video para mostrar"
                    showon="es-url:0"
                ></field>

                <field 
                    name="ruta-video-hd" 
                    type="media"                     
                    label="Video HD" 
                    types="videos"
                    description="Ruta al video en alta calidad para mostrar"
                    showon="es-url:0"
                ></field>
                <field 
                    name="titulo-linea-1" 
                    type="text" 
                    label="TITULO_LINEA_1" 
                    description="Linea superior del título"
                ></field>
                <field 
                    name="titulo-linea-2" 
                    type="text" 
                    label="TITULO_LINEA_2" 
                    description="Linea inferior del título"
                ></field>
                <field
                    name="tiene-poster"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    default="0"
                    label="Poster"
                    description="Activar el poster durante la precarga del video"
                >
                    <option value="0">JNO</option>
					<option value="1">JYES</option>
                </field>
                <field 
                    name="ruta-poster" 
                    type="media"                     
                    label="Imagen" 
                    description="Ruta a la imagen del poster"
                    showon="tiene-poster:1"
                ></field>
                <fieldset label="basic">
                <field
                    name="lazy-video"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    default="1"
                    label="Defer Loading"
                    description="Posponer la carga del video hasta que la página este cargada"
                >
                    <option value="0">JNO</option>
					<option value="1">JYES</option>
                </field>
                </fieldset>
            </fieldset>
        </fields>
    </config>
</extension>